@model Debugtime.Common.Model.Input.UserEditInputModel

@{
    ViewBag.Title = "Edit User";
}

<div class="app-heading app-heading-bordered app-heading-page">
    <div class="icon icon-lg">
        <span class="icon-user-plus"></span>
    </div>
    <div class="title">
        <h2>Edit User</h2>
        <p>Edit and modify properties of user.</p>
    </div>
    <!--<div class="heading-elements">
        <a href="#" class="btn btn-danger" id="page-like"><span class="app-spinner loading"></span> loading...</a>
    </div>-->
</div>
<div class="app-heading-container app-heading-bordered bottom">
    <ul class="breadcrumb">
        <li><a href="#">Dashboard</a></li>
        <li><a href="#">Users</a></li>
        <li class="active">Edit</li>
    </ul>
</div>
<!-- END PAGE HEADING -->
<!-- START PAGE CONTAINER -->
<div class="container">

    <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-8">

            <!-- LENGTH EXAMPLE -->
            <div class="block">

                <div class="app-heading app-heading-small">
                    <div class="title">
                        <h2>Add a New User</h2>
                    </div>
                </div>
                <form action="@Url.Action("Edit")" method="post">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "Attention Required!", new { @class = "col-xs-12" })

                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", placeholder = "Email*" })
                        @Html.ValidationMessageFor(model => model.Email, null, new { @class = "" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model=>model.DateCreated)
                        @Html.TextBoxFor(model => model.DateCreated, new {@class = "form-control", placeholder = "Date Created*"})
                        @Html.ValidationMessageFor(model => model.DateCreated, null, new {@class = ""})
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.DateModified)
                        @Html.TextBoxFor(model => model.DateModified, new {@class = "form-control", placeholder = "Date Modified*"})
                        @Html.ValidationMessageFor(model => model.DateModified, null, new {@class = ""})
                    </div> 
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", placeholder = "Phone Number*" })
                        @Html.ValidationMessageFor(model => model.PhoneNumber, null, new { @class = "" })
                    </div>
                  
                    <div class="form-group">
                        <label>Role</label><br />
                        @Html.DropDownList("role", (IEnumerable<SelectListItem>)ViewBag.Roles, new { @class = "form-control" })
                    </div>
                    @Html.HiddenFor(model=>model.Id)
                    @Html.HiddenFor(model=>model.UserName)
                    @Html.Hidden("ReturnUrl", ViewBag.ReturnUrl as String, null)
                    <div class="form-group margin-top-20">
                        <button class="btn btn-primary" type="submit">Submit</button>
                    </div>
                </form>

            </div>
            <!-- END LENGTH EXAMPLE -->

        </div>
        <div class="col-md-2">
        </div>
    </div>
</div>
