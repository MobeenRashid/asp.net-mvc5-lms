@model Debugtime.Common.Model.Input.UserRegisterViewModel
@{
    ViewBag.Title = "Add";
}
<!-- START PAGE HEADING -->
<div class="app-heading app-heading-bordered app-heading-page">
    <div class="icon icon-lg">
        <span class="icon-user-plus"></span>
    </div>
    <div class="title">
        <h2>Add New User</h2>
        <p>Create a brand new user and add them to this site.</p>
    </div>
    <!--<div class="heading-elements">
        <a href="#" class="btn btn-danger" id="page-like"><span class="app-spinner loading"></span> loading...</a>
    </div>-->
</div>
<div class="app-heading-container app-heading-bordered bottom">
    <ul class="breadcrumb">
        <li><a href="#">Dashboard</a></li>
        <li><a href="#">Users</a></li>
        <li class="active">Add New User</li>
    </ul>
</div>
<!-- END PAGE HEADING -->
<!-- START PAGE CONTAINER -->
<div class="container">

    <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-8">

            <!-- LENGTH EXAMPLE -->
            <div class="block">

                <div class="app-heading app-heading-small">
                    <div class="title">
                        <h2>Add a New User</h2>
                    </div>
                </div>
                <form action="@Url.Action("Add")" method="post">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "Attention Required!", new { @class = "col-xs-12" })

                    <div class="form-group">
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = "First Name*" })
                        @Html.ValidationMessageFor(model => model.FirstName, null, new { @class = "" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = "Last Name*" })
                        @Html.ValidationMessageFor(model => model.LastName, null, new { @class = "" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", placeholder = "Email*" })
                        @Html.ValidationMessageFor(model => model.Email, null, new { @class = "" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "password", placeholder = "Password*" })
                        @Html.ValidationMessageFor(model => model.Password, null, new { @class = "" })
                    </div>
                    @*<div class="form-group">
                            <label>Website</label>
                            <input class="form-control" data-validation="url" placeholder="www.domain.com">
                        </div>*@
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control", type = "password", placeholder = "Confirm Password*" })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, null, new { @class = "" })
                    </div>
                    @*<div class="form-group">
                        <label>Send User Notification</label>
                        <div class="app-checkbox">
                            <label><input type="checkbox" name="app-checkbox-1" value="1" checked> Send the new user an email about their account.</label>
                        </div>
                        </div>*@
                    <div class="form-group">
                        <label>Role</label><br />
                        @Html.DropDownList("role", (IEnumerable<SelectListItem>)ViewBag.Roles,new{@class="form-control"})
                        @*@Html.DropDownListFor(model => model.StudentGrade, Model.ActionsList, new { @class = "form-control" })*@
                    </div>
                    @Html.Hidden("ReturnUrl", ViewBag.ReturnUrl as String, null)
                    <div class="form-group margin-top-20">
                        <button class="btn btn-primary" type="submit">Submit</button>
                    </div>
                </form>

            </div>
            <!-- END LENGTH EXAMPLE -->

        </div>
        <div class="col-md-2">
        </div>
    </div>
</div>



<script type="text/javascript" src="~/Content/Scripts/jquery.min.js"></script>
