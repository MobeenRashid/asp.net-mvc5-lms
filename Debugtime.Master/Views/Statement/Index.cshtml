@model IEnumerable<DebugTime.Domain.Model.Transaction>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div class="app-heading app-heading-bordered app-heading-page">
    <div class="icon icon-lg">
        <span class="icon-user-plus"></span>
    </div>
    <div class="title">
        <h2>Statement</h2>
        <p>All Detailed Order</p>
    </div>
    <!--<div class="heading-elements">
        <a href="~/Courses/Edit" class="btn btn-danger" id="page-like"><span class="app-spinner loading"></span> loading...</a>
    </div>-->
</div>
<div class="app-heading-container app-heading-bordered bottom">
    <ul class="breadcrumb">
        <li><a href="~/Panel/Index">Dashboard</a></li>
        <li class="active">Statement</li>
    </ul>
</div>

<div class="container">
    <div class="block block-condensed">
        <div class="margin-top-10"></div>

        <div class="block-content">

            <table class="table table-striped table-bordered datatable-extended">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Order</th>
                        <th>Course</th>
                        <th>Amount</th>
                        <th>Discount</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Statement.Time.ToString("M")</td>
                        <td><a href="@Url.Action("Invoice","Statement",new{area="",id=item.Id})">@item.Order</a></td>
                        <td><a>@item.Course.Title</a></td>
                        <td>$@item.Course.Price</td>
                        <td>$0</td>
                    </tr>  
                }
                </tbody>
            </table>

        </div>

    </div>
</div>