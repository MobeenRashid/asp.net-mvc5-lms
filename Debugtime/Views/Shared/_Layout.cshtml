<body>
    <nav class="dtm-top-bar dtm-primary-nav" style="margin: 0">
        <div class="primary-nav-left">
            <a href="#" id="primaryMenuBar" class="hamburger-menu"> <i class="fa fa-bars"></i></a>

            <div class="site-title">
                <a href="/" class="dtm-brand-name">
                    <span class="dtm-first-name">debug</span><span class="dtm-last-name">time</span>
                </a>
            </div>
        </div>
        <div class="primary-nav-center">
            <ul class="menu">
                <li class="search-form">
                    @Html.Partial("_SearchForm")
                </li>
                <li>
                    <a href="@Url.Action("Index", "Courses", new {area = "Library"})">Courses</a>

                </li>
                <li> <a href="@Url.Action("Featured", "Courses", new {area = "Library"})">Featured</a></li>
