            </ul>
        </div>
        <div class="primary-nav-right">
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    @Html.Partial("_MobileNavPartial")

    <div class="row body-content">
        @RenderBody()
    </div>
    <footer class="row footer">
        <div class="medium-3 column company-name">
            <div class="group">
                <a class="name"><span class="first">debug</span><span class="second">time</span></a>
                <p>an Education Company</p>
                <h6>&copy; 2017 debugtime, Inc</h6>
            </div>
        </div>
        <div class="medium-3 column links">
            <ul>
                <li>
                    <a href="@Url.Action("Index","Courses",new { area="Library"})">Courses</a>
                </li>
                <li>
                    <a href="#">Featured</a>
                </li>
                <li>
                    <a href="#">Latest</a>
                </li>
            </ul>

        </div>

        <div class="medium-3 column links">
            <ul>
                <li>
                    <a href="@Url.Action("AboutUs","Home",new { })">About Us</a>
                </li>
                <li>
                    <a href="@Url.Action("Terms","Home",new {})">Terms & Privacy</a>
                </li>
                <li>
                    <a href="@Url.Action("Support","Home",new {})">Support</a>
                </li>
            </ul>

        </div>

        <div class="medium-3 column social-links">
            <ul>
                <li>
                    <a href="https://twitter.com/debugtime" target="_blank">
                        <i class="fa fa-twitter"></i>
                    </a>
                </li>
                <li>
                    <a href="https://www.youtube.com/c/debugtime" target="_blank">
                        <i class="fa fa-youtube-play"></i>
                    </a>
                </li>
                <li>
                    <a href="https://www.facebook.com/debugtime/" target="_blank">
                        <i class="fa fa-facebook"></i>
                    </a>
                </li>
                <li>
                    <a href="https://plus.google.com/+debugtime" target="_blank">
                        <i class="fa fa-google-plus"></i>
                    </a>
                </li>
            </ul>
        </div>
    </footer>
    @Scripts.Render("~/Content/Scripts")
    @RenderSection("scripts", false)
